{
    "name": "@freshheads/webpack-config-builder",
    "version": "3.1.0",
    "description": "Uses an adapter pattern to build webpack configurations. This makes it possible for teams to create and maintain their base webpack setup and be able to update it from a central git repo, instead of having to change every project individually",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "test": "jest --config=jest.config.js --detectOpenHandles --silent",
        "test:watch": "jest --watch --notify --config=jest.config.js --detectOpenHandles --silent",
        "prettier:check": "prettier --check './**/*.{js,ts,json,md}'",
        "prettier:write": "prettier --write './**/*.{js,ts,json,md}'",
        "prepare": "npm run build"
    },
    "keywords": [
        "webpack",
        "config",
        "builder",
        "build",
        "freshheads",
        "configuration"
    ],
    "author": {
        "name": "Freshheads",
        "url": "https://freshheads.com",
        "email": "info@freshheads.com"
    },
    "contributors": [
        {
            "name": "Martin Broos",
            "url": "https://freshheads.com"
        },
        {
            "name": "Gijs Nieuwenhuis",
            "url": "https://freshheads.com"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/freshheads/webpack-config-builder.git"
    },
    "engines": {
        "node": ">=12.13.0"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/copy-webpack-plugin": "^6.3.0",
        "@types/deepmerge": "^2.2.0",
        "@types/jest": "^26.0.15",
        "@types/mini-css-extract-plugin": "^1.2.1",
        "@types/semver": "^7.3.4",
        "autoprefixer": "^10.0.2",
        "babel-loader": "^8.2.1",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.3.1",
        "css-loader": "^5.0.1",
        "cssnano": "^4.1.10",
        "fibers": "^5.0.0",
        "file-loader": "^6.2.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jquery": "^3.5.1",
        "lint-staged": "^10.5.1",
        "mini-css-extract-plugin": "^1.3.1",
        "postcss": "^8.1.7",
        "postcss-loader": "^4.1.0",
        "prettier": "^2.1.2",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.29.0",
        "sass-loader": "^10.1.0",
        "typescript": "^4.0.5",
        "webpack": "^5.6.0",
        "webpack-stats-plugin": "^1.0.2"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "deepmerge": "^4.2.2",
        "semver": "^7.3.2"
    },
    "peerDependencies": {
        "webpack": "^5.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,css,md}": "prettier --write"
    }
}
